html
  head
    title Forgot password
    include ../main/header_generic.pug

body(class="bg-gradient-primary")
  div(class="container")
    <!-- Outer Row -->
    div(class="row justify-content-center")
      div(class="col-xl-10 col-lg-12 col-md-9")
        div(class="card o-hidden border-0 shadow-lg my-5")
          div(class="card-body p-0")
            <!-- Nested Row within Card Body -->
            div(class="row")
              div(class="col-lg-6 d-none d-lg-block bg-password-image")
              div(class="col-lg-6")
                div(class="p-5")
                  
                  if message != ""
                    div(class="alert alert-" + message.type role="alert")= message.content
                    
                  div(class="text-center")
                    h1(class="h4 text-gray-900 mb-2") Forgot Your Password?
                    p(class="mb-4") Final steps change your password

                  form(action="/reset-password" method="POST" class="user")
                    div(class="form-group")
                      input(type="password" class="form-control form-control-user" id="newpassword" name="newpassword" aria-describedby="emailHelp" placeholder="Enter New Password..." required minlength="5" maxlength="20")
                    div(class="form-group")
                      input(type="password" class="form-control form-control-user" id="newpassword2" name="newpassword2" aria-describedby="emailHelp" placeholder="Re-Enter New Password..." required minlength="5" maxlength="20")
                      input(input id="token" name="token" type="hidden" value=token)
                    if message === "" 
                      button(type="submit" class="btn btn-primary btn-user btn-block") Reset Password
                  <hr>
  include script_js.pug
