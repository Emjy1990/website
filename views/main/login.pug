html
  head
    title Login
    <meta name="viewport" content="width=device-width, initial-scale=1">
    link(rel='stylesheet', href='/template/sb-admin-2.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')
    link(rel='stylesheet', href='vendor/fontawesome-free/css/all.min.css')

body(class="bg-gradient-primary")
  div(class="container")
    <!-- Outer Row -->
    div(class="row justify-content-center")
      div(class="col-xl-10 col-lg-12 col-md-9")
        div(class="card o-hidden border-0 shadow-lg my-5")
          div(class="card-body p-0")
            <!-- Nested Row within Card Body -->
            div(class="row")
              div(class="col-lg-6 d-none d-lg-block bg-login-image")
              div(class="col-lg-6")
                div(class="p-5")
                  
                  if message != "" && message != undefined
                    div(class="alert alert-" + message.type role="alert")= message.content

                  div(class="text-center")
                    h1(class="h4 text-gray-900 mb-4") Welcome Back!
                  form(action="/login" method="POST" class="user")
                    div(class="form-group")
                      input(type="email" id="email" name="email" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Enter Email Address..." required maxlength="80")
                    div(class="form-group")
                      input(type="password" id="password" name="password" class="form-control form-control-user" placeholder="Password" required minlength="5" maxlength="20")
                    div(class="form-group")
                    div(class="form-group")
                      div(class="custom-control custom-checkbox small")
                        input(type="checkbox" class="custom-control-input" id="customCheck")
                        label(class="custom-control-label" for="customCheck") Remember Me
                    button(type="submit" class="btn btn-primary btn-user btn-block") Login
                  hr
                  div(class="text-center")
                    a(class="small" href="/forgot-password") Forgot Password?
                  div(class="text-center")
                    a(class="small" href="/register") Create an Account!
  include script_js.pug